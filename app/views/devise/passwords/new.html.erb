<div class="my-8 mx-auto max-w-xl p-8 rounded-xl bg-white shadow">

<h2 class="text-xl">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'button mb-4' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>